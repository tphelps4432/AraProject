<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello."
        android:textColor="#ffffff"
        android:textSize="70dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to your Ara Heath Center."
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="What would you like to do?"
        android:textColor="#ffffff"
        android:textSize="25dp" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/button_panel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/ph"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:onClick="quickConfirm"
                android:padding="12dp"
                android:text="pH"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/glucose"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:padding="12dp"
                android:text="Glucose"
                android:onClick="quickConfirm"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/heavy_metal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:padding="12dp"
                android:onClick="quickConfirm"
                android:text="Heavy Metal"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/amperometry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:padding="12dp"
                android:text="Amperometry"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/eis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:padding="12dp"
                android:text="EIS"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/other"
                android:onClick="launchTesting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue"
                android:padding="12dp"
                android:text="Other"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>